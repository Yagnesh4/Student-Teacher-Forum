<div class="wrapper">
    <div class="question container">
      <div class="row">


        <div class="text col-lg-12">
          <div class="question-asked ">
            <% data.forEach(function(item){ %>
             <div class="answer">
             question asked by <b><%= item.name %></b> :-
                <%= item.question %><br>
                <div>
                  <% if (item.image) { %>
                  <img src="./uploads/<%= item.image %>" alt="image" width="100px" height="100px">
                  <% } %>
                </div>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1">Answer This</button>
              </div>
              <%  }) %>
           </div>
          
          <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel" style="color: black;">Citrine Gate Academy
                  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
               </div>
              <div class="modal-body">
                <div class="">
                  <form class="signup" action="/answer" method="POST">
                    <textarea  name="answer"  placeholder="Answer to this Question ..." required></textarea>
                    <div class="button ">
                        <input type="submit" value="Post Question" >
                    </div>
                </form>
                 </div>
              </div>
               <!-- <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Post Answer</button>
              </div>  -->
            </div>
          </div>
        </div>
        </div>


        
        
         
         
